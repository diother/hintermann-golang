{{ define "header" }} 
<header class="sticky top-0 z-50 w-full border-b before:absolute before:inset-0 before:-z-10 before:backdrop-blur supports-[backdrop-filter]:bg-background/80">
    <div class="mx-auto flex min-h-16 max-w-screen-sm flex-col justify-between gap-4 px-4 py-4 xs:flex-row xs:items-center xs:px-6">
        <a href="/">{{ template "icons/logo" "class='h-[24px] w-[232px]'" }}</a>
        <div class="flex gap-4">
            <div class="hidden items-center gap-6 md:flex">
                <a href="/contact" class="text-muted transition-colors hover:text-foreground">Contact</a>
                <a href="/projects" class="text-muted transition-colors hover:text-foreground">Proiecte</a>
            </div>
            <button class="hidden md:flex" href="/donate">
                Donează
            </button>
            {{ template "mobile-menu" }}
        </div>
    </div>
</header>
{{ end }}

{{ define "mobile-menu" }}
<div>
    {{ template "icons/menu" "class='h-8 w-8'" }}
</div>
<div class="fixed inset-0 z-50 flex flex-col bg-background px-4 xs:px-6">
    <div class="mt-8 flex flex-col gap-5">
        {navLinks.map((link) => (
            <a href="/" className="font-display text-2xl">
                Test Link
            </a>
        ))}
    </div>
    <Button class="mt-8" size="xl" href="/donate">
        Donează
    </Button>
</div>
{{ end }}
